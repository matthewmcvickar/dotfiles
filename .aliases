# Easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Folders
alias dl="cd ~/Downloads/"
alias dt="cd ~/Desktop/"
alias sites="cd ~/Sites/"
alias mm="cd ~/Sites/matthewmcvickar/"
alias os="cd ~/Sites/opensource/"
alias work="cd ~/Sites/work/"

# Commands
alias g="git"
alias a="atom ."
alias e="emacs ."
alias c="code ."

# Configuration
alias reload="source ~/.bash_profile"
alias dots="bash ~/Sites/matthewmcvickar/dotfiles/build_dotfiles.sh --force"
alias sshconfig="c ~/.ssh/config"
alias httpdconfig="sudo code /etc/apache2/httpd.conf"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag="--color"
else # OS X `ls`
  colorflag="-G"
fi

# List all files colorized in long format
alias l="ls -la ${colorflag}"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# Enable aliases to be sudo'ed
alias sudo='sudo '

# Update Homebrew and NPM packages.
alias gupdate='brew update; brew upgrade; brew cleanup; npm update npm -g; npm update -g;'

# Flush Directory Service cache
alias flushdns="sudo killall -HUP mDNSResponder"

# Start a PHP server in the local directory.
alias pserv="sleep 1 && open "http://localhost:9000/" & php -S localhost:9000 -t ./"
